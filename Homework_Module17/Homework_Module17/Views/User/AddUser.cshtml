@model UserViewModel;


@{
    ViewData["Title"] = "Add new user";
}

@using (Html.BeginForm(FormMethod.Post))
{
    <p>
        @Html.DisplayNameFor(user => user.Name)
        @Html.TextBoxFor(user => user.Name)
    </p>
    <p>
        @Html.DisplayNameFor(user => user.Sex)
        @Html.DropDownListFor(user => user.Sex, Html.GetEnumSelectList<EnumSex>())
    </p>
    <p>
        @Html.DisplayNameFor(user => user.Country)
        @Html.DropDownListFor(user => user.Country, new SelectList(new List<string> {"Беларусь", "Польша", "Украина"}))
    </p>
    <p>
        @Html.DisplayNameFor(user => user.IsMarried)
        @Html.CheckBoxFor(user => user.IsMarried, false)
    </p>
    <button type="submit">Add User</button>
}
<br>
@Html.Partial("_GoBack")
