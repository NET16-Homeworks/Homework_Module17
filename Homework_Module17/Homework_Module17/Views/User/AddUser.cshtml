@model Homework_Module17.Models.UserViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Add New User";
}

@using (Html.BeginForm("AddUser", "User", FormMethod.Post))
{
   <p>
        @Html.LabelFor(u=>u.Name, "Имя")
        @Html.TextBoxFor(q => q.Name) <br />
       
        @Html.LabelFor(u=>u.Country, "Country") 
        @*@Html.DropDownList("Country", Html.GetEnumSelectList(typeof(Country))) <br />*@
        
        @Html.DropDownList("Country", new SelectList(ViewBag.lstCountry as List<string>), "") <br />

        @Html.RadioButtonFor(u=>u.Sex, "Men",  true) <span>Men</span> 
        @Html.RadioButtonFor(u=>u.Sex, "Women") <span>Women</span> <br />

        @Html.CheckBoxFor(u=>u.IsMarried, "IsMarried") <span>IsMarried</span> <br />

       
        <input type="submit" value="Submit" />
      
    </p> 
}

@{Html.RenderPartial("_GoBack");}
